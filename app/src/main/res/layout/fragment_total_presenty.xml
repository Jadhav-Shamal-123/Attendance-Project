<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TotalPresenty"
    tools:ignore="MissingClass">

    <TextView
        android:id="@+id/sname"
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:background="#F7F2F9"
        android:textSize="16dp"
        android:textAlignment="center"
        android:gravity="center|start"
        android:hint="STD Name"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/Tday"
        android:layout_below="@id/sname"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="#F7F2F9"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:gravity="center|start"
        android:textAlignment="center"
        android:textSize="16dp"
        android:hint="Total Day" />

    <TextView
        android:id="@+id/Tpresent"
        android:layout_width="264dp"
        android:background="#F7F2F9"
        android:layout_height="39dp"
        android:layout_below="@+id/Tday"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center|start"
        android:textAlignment="center"
        android:hint="Total Present in %"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Tabsent"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_below="@id/Tpresent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:gravity="center|start"
        android:textAlignment="center"
        android:background="#F7F2F9"
        android:textSize="16dp"
        android:textStyle="bold"
        android:hint="Total Absent in %"
         />



</RelativeLayout>